@model IEnumerable<Workers.Web.Infrastructure.Models.StatusProject>

@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAll</h1>

<p>
    <a asp-area="Admin" asp-controller="StatusProject" asp-action="Create">Create New</a>
</p>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", "StatusProject", new { id = item.Id, area = "Admin" }) |
                            @Html.ActionLink("Delete", "Delete", "StatusProject", new { id = item.Id, area = "Admin" })
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No statuses!</h2>
}

