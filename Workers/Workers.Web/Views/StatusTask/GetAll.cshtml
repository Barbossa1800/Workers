@model IEnumerable<Workers.Web.Infrastructure.Models.Status>

@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAll</h1>

<p>
    <a asp-area="Admin" asp-controller="StatusTask" asp-action="Create">Create New</a>
</p>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StatusName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusName)
                    </td>

                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", "StatusTask", new { id = item.Id, area = "Admin" }) |
                            @Html.ActionLink("GetDetails", "GetDetails", "StatusTask", new { id = item.Id })
                            @Html.ActionLink("Delete", "Delete", "StatusTask", new { id = item.Id, area = "Admin" }) |
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No items</h2>
}