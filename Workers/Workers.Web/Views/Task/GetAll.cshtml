@model IEnumerable<Workers.Web.Infrastructure.Models.Task>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "GetAll";
}

<h1>GetAll</h1>

<p>
    <a asp-area="Admin" asp-controller="Task" asp-action="Create">Create New</a>
</p>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DeadLine)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PercentOfCompleted)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Project)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PercentOfCompleted)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Task", new { id = item.Id, area = "Admin" }) |
                        @Html.ActionLink("Details", "GetDetails", "Task", new { id = item.Id, area = "Admin" }) |
                        @Html.ActionLink("Delete", "Delete", "Task", new { id = item.Id, area = "Admin" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No tasks!</h2>
}
