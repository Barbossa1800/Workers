@model IEnumerable<Workers.Web.Infrastructure.Models.Project>

@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetAll</h1>

<p>
    <a asp-area="Admin" asp-controller="Project" asp-action="Create">Create New</a>
</p>
@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndAt)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusProject)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusProject.Status)
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Project", new { id = item.Id, area = "Admin" }) |
                            @Html.ActionLink("Delete", "Delete", "Project", new { id = item.Id, area = "Admin" }) |
                            @Html.ActionLink("Details", "GetDetails", "Project", new { id = item.Id })
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <h2>No projects!</h2>
}
